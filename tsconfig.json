{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
